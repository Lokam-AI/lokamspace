# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/garagebot

# LiveKit Configuration
# The WebSocket URL of your LiveKit server (e.g., wss://your-livekit-instance.com)
LIVEKIT_URL=wss://your-livekit-instance.com

# Your LiveKit API key (from LiveKit Cloud dashboard or self-hosted server)
LIVEKIT_API_KEY=your_livekit_api_key_here

# Your LiveKit API secret (from LiveKit Cloud dashboard or self-hosted server)
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# The SIP trunk ID for outbound calling (from LiveKit dashboard)
SIP_OUTBOUND_TRUNK_ID=your_sip_trunk_id_here

# OpenAI Configuration
# Your OpenAI API key (from OpenAI dashboard)
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram Configuration
# Your Deepgram API key (from Deepgram dashboard)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Cartesia Configuration
# Your Cartesia API key for TTS
CARTESIA_API_KEY=your_cartesia_api_key_here

# API Server Configuration
# Host to bind the API server to (use 0.0.0.0 for all interfaces)
API_HOST=0.0.0.0

# Port for the API server
API_PORT=8000

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: SSL/TLS Configuration (if needed)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: Redis Configuration (if implementing rate limiting or caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Monitoring Configuration
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_ENABLED=true